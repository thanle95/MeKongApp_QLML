<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CameraActivity">

    <!-- TODO: Update blank fragment layout -->


    <!--layout chứa các nút chức năng-->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_small">

            <ImageView
                android:id="@+id/cameraBack"
                android:layout_width="@dimen/size_capture_image"
                android:layout_height="@dimen/size_capture_image"
                android:gravity="left"
                android:onClick="onClick"
                app:tint="@android:color/white"
                android:src="@drawable/ic_back" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/cameraFlash"
                android:layout_width="@dimen/size_capture_image"
                android:layout_height="@dimen/size_capture_image"
                android:onClick="onClick"
                app:tint="@android:color/white"
                android:src="@drawable/ic_flash_off" />
        </LinearLayout>

        <SurfaceView
            android:id="@+id/surfaceViewFragmentCamera"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:orientation="vertical"
            android:padding="@dimen/padding_small">

            <ImageView
                android:id="@+id/cameraCapture"
                android:layout_width="@dimen/size_capture_image"
                android:layout_height="@dimen/size_capture_image"
                android:layout_gravity="center"
                android:onClick="onClick"
                app:tint="@android:color/white"
                android:src="@drawable/ic_camera" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
